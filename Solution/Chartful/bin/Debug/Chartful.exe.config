<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="baseAddress" value="net.p2p://ChartfulService/" />
  </appSettings>
  <system.serviceModel>
    <client>
      <endpoint address="net.tcp://localhost:9000/Server/Service/"
          binding="netTcpBinding" bindingConfiguration="NetTcpBinding_IChat"
          contract="IChat" name="NetTcpBinding_IChat">
        <identity>
          <dns value="localhost" />
        </identity>
      </endpoint>
    </client>

    <bindings> 
            <!--Following is the expanded configuration section for a NetPeerTcpBinding.
            Each property is configured with the default value, except for 
            peerNodeAuthenticationMode and port.
            See the security samples under Scenario\PeerChannel
            to learn how to configure NetPeerTcpBinding for security.--> 
            
      <netPeerTcpBinding>
        <binding name="TchatBinding"
                 port="0"
                 openTimeout="00:10:00"
                 closeTimeout="00:10:00"
                 sendTimeout="00:10:00"
                 receiveTimeout="00:10:00"
                 maxReceivedMessageSize="65536"
                 maxBufferPoolSize="524288">
          <readerQuotas maxDepth="2147483647"
                        maxStringContentLength="2147483647"
                        maxArrayLength="2147483647"
                        maxBytesPerRead="2147483647"
                        maxNameTableCharCount="2147483647" />
          <security mode="None" />
          <resolver mode="Pnrp"/>
        </binding>
      </netPeerTcpBinding>
    </bindings>
  </system.serviceModel>
</configuration>